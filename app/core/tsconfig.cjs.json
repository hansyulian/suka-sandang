{
  "extends": "../../tsconfig.cjs.json",
  "include": ["src", "test", "config/config.js", "@types"],
  "compilerOptions": {
    "outDir": "dist/cjs",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~test/*": ["test/*"]
    },
    "composite": true
  }
}
