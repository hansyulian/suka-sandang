{
  "extends": "../../tsconfig.test.json",
  "include": ["src", "config/config.js", "tests", "@types"],
  "exclude": [],
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "~/*": ["src/*"],
      "~test/*": ["test/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  }
}
