{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "strict": true,
    "stripInternal": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "example", "@types"]
}
