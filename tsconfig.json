{
  "compilerOptions": {
    "module": "ESNext", // Use ES modules
    "target": "ESNext", // Use the latest ECMAScript features
    "outDir": "dist",
    "declaration": true,
    "rootDir": "src",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  }
}
